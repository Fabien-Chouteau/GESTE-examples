with "sdlada.gpr";

project Platformer extends "geste" is

   for Source_Dirs use ("src/**", "../utils/**");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("main.adb");
   
   for Create_Missing_Dirs use "True";

   package Linker is
      for Default_Switches ("Ada") use ("-lSDL2");
  end Linker;

end Platformer;
